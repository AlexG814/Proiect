<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PoliceApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
            color: #001f3f;
        }

        .navbar {
            background-color: #001f3f;
            color: white;
        }

            .navbar a {
                backgorund-color: #001f3f;
                color: white;
            }

                .navbar a.nav-link {
                    color: white;
                    font-weight: bold;
                }

                    .navbar a.nav-link:hover {
                        background-color: #0056b3;
                    }

        h1 {
            color: #001f3f;
            border-bottom: 2px solid #001f3f;
            padding-bottom: 10px;
        }

        .btn-primary {
            background-color: #001f3f;
            border-color: #001f3f;
        }

        .btn-link {
            color: #dc3545;
        }

        .table thead {
            background-color: #001f3f;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #e0e0e0;
        }

        .search-bar {
            margin-bottom: 20px;
        }

        .footer {
            background-color: #001f3f;
            color: white;
        }

            .footer a {
                color: #ffcc00;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PoliceApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cazuri" asp-action="Index">Cazuri</a>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AppRoles" asp-action="Index">Roles</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cazuri" asp-action="Arhiva">Arhiva</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
