@model PoliceApp.Models.Caz

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Caz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descriere
        </dt>
        <dd class="col-sm-10">
            @Model.Descriere
        </dd>
        <dt class="col-sm-2">
            Stadiu
        </dt>
        <dd class="col-sm-10">
            @Model.Stadiu
        </dd>
        <dt class="col-sm-2">
            Prioritate
        </dt>
        <dd class="col-sm-10">
            @Model.Prioritate
        </dd>
    </dl>
</div>

<h4>Comentarii</h4>
<table class="table">
    <thead>
        <tr>
            <th>Continut</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comentariu in Model.Comentarii)
        {
            <tr>
                <td>@comentariu.Continut</td>
                <td>
                    <form asp-action="DeleteComentariu" method="post">
                        <input type="hidden" name="id" value="@comentariu.ComentariuId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="AdaugaComentariu" asp-route-id="@Model.CazId" class="btn btn-primary">Adauga Comentariu</a>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
